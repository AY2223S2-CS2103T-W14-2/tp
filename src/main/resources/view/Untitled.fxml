<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root maxWidth="1000.0" minHeight="640.0" minWidth="700.0" onCloseRequest="#handleExit" title="eduMate" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/address_book_32.png" />
    </icons>
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@Extensions.css" />
            </stylesheets>

            <HBox VBox.vgrow="ALWAYS">
                <VBox minWidth="-Infinity" prefWidth="80.0" style="-fx-background-color: black; -fx-opacity: 0.9; -fx-background-radius: 0 10 0 10;">
                    <Button fx:id="exitButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleExit" prefHeight="40.0" prefWidth="50.0" style="-fx-background-color: #edede9; -fx-background-radius: 10;" text="Exit">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                  <VBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="50.0" />
                  </VBox.margin>
                    </Button>
                    <Button fx:id="helpButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleHelp" prefHeight="40.0" prefWidth="50.0" style="-fx-background-color: #edede9; -fx-background-radius: 10;" text="Help">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                  <VBox.margin>
                     <Insets bottom="100.0" left="10.0" right="10.0" />
                  </VBox.margin>
                    </Button>
               <HBox.margin>
                  <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
                </VBox>


                <VBox maxHeight="1.7976931348623157E308" maxWidth="400.0" minWidth="200.0" prefWidth="300.0" style="-fx-background-color: white; -fx-background-radius: 10;">
                    <StackPane fx:id="commandBoxPlaceholder" maxHeight="-Infinity" minHeight="40.0" minWidth="100.0" prefHeight="40.0" style="-fx-background-color: #dbdbdb; -fx-background-radius: 10;">
                  <VBox.margin>
                     <Insets bottom="10.0" left="15.0" right="15.0" top="15.0" />
                  </VBox.margin></StackPane>
                    <VBox fx:id="personList" minHeight="100.0" VBox.vgrow="ALWAYS">
                        <StackPane fx:id="personListPanelPlaceholder" minHeight="500.0" style="-fx-background-color: transparent; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></StackPane>
                  <VBox.margin>
                     <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
                  </VBox.margin>
                    </VBox>
               <HBox.margin>
                  <Insets bottom="10.0" left="2.0" right="5.0" top="10.0" />
               </HBox.margin>
                </VBox>


                <VBox maxWidth="600.0" minWidth="400.0" prefWidth="300.0" style="-fx-background-color: #edede9; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                    <StackPane fx:id="userProfilePlaceholder" style="-fx-background-color: black; -fx-background-radius: 10;">
                  <VBox.margin>
                     <Insets left="15.0" right="15.0" top="15.0" />
                  </VBox.margin></StackPane>
                    <StackPane fx:id="resultDisplayPlaceholder" alignment="BOTTOM_RIGHT" maxHeight="100.0" minHeight="20.0" prefHeight="100.0" style="-fx-opacity: 0.5;" VBox.vgrow="NEVER">
                  <VBox.margin>
                     <Insets left="10.0" right="10.0" />
                  </VBox.margin></StackPane>
               <HBox.margin>
                  <Insets bottom="10.0" left="4.0" right="10.0" top="10.0" />
               </HBox.margin>
                </VBox>
            </HBox>
        </Scene>
    </scene>
</fx:root>
