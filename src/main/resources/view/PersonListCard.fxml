<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="5" left="15" right="5" top="5" />
      </padding>
      <HBox alignment="CENTER_LEFT" spacing="5" style="-fx-background-color: #e63946; -fx-background-radius: 0 5 0 5; -fx-padding: 3;">
        <Label fx:id="id" textFill="WHITE">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
               <font>
                  <Font size="15.0" />
               </font>
        </Label>
        <Label fx:id="name" text="\$first" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font></Label>
      </HBox>
      <FlowPane fx:id="groupTags">
            <VBox.margin>
               <Insets bottom="5.0" top="5.0" />
            </VBox.margin></FlowPane>
      <Label fx:id="phone" text="\$phone" textFill="#5e5e5e" />
      <Label fx:id="address" text="\$address" textFill="#5e5e5e" />
      <Label fx:id="email" text="\$email" textFill="#5e5e5e" />
    </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
